{
  "name": "node-ts-scratchpad-template",
  "version": "1.0.0",
  "description": "A modern template for a Node.js TypeScript project",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --outdir=dist",
    "lint": "eslint . --color --ext .ts",
    "prettier": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "tsc -w",
    "prepare": "husky",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.15.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.10.1",
    "@typescript-eslint/eslint-plugin": "8.16.0",
    "@typescript-eslint/parser": "8.16.0",
    "aws-cdk": "2.171.1",
    "esbuild": "0.24.0",
    "eslint": "9.15.0",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.13.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "3.4.1",
    "ts-jest": "29.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "aws-cdk-lib": "2.171.1",
    "constructs": "10.4.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown .",
    "*.ts": "eslint --color --fix --max-warnings=0"
  },
  "volta": {
    "node": "22.11.0",
    "npm": "10.9.1"
  }
}
