{
  "name": "cdk-template-typescript",
  "version": "1.0.0",
  "description": "A CDK Node.js TypeScript template",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc && esbuild src/index.ts --bundle --platform=node --outdir=dist",
    "lint": "eslint . --color",
    "prettier": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "tsc -w",
    "prepare": "husky",
    "cdk": "cdk"
  },
  "devDependencies": {
    "@eslint/compat": "1.4.0",
    "@eslint/js": "9.37.0",
    "@types/jest": "30.0.0",
    "@types/node": "22.18.10",
    "aws-cdk": "2.1030.0",
    "esbuild": "0.25.10",
    "eslint": "9.37.0",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.4",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.1"
  },
  "dependencies": {
    "aws-cdk-lib": "2.219.0",
    "constructs": "10.4.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown .",
    "*.ts": "eslint --color --fix --max-warnings=0"
  },
  "volta": {
    "node": "22.20.0",
    "npm": "11.6.2"
  }
}
